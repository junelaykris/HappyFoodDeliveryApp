<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/grey"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_success"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_checkmessage" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_4x"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/margin_4x"
        android:text="Thank You For \n Your Order"
        android:textAlignment="center"
        android:textColor="@color/red_one"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_4x"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/margin_4x"
        android:layout_marginBottom="80dp"
        android:text="You can track the delivery \n in the order sections"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_order_track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner_btn_red"
        android:text="Track My Order"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_order_something"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner_white"
        android:text="Order Something Else"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>